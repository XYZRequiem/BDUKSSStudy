<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.requiem.bdukssstudy"
    android:versionCode="1"
    android:versionName="BDUKSSStudy">

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        />



    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >


        <activity
            android:name="com.example.requiem.bdukssstudy.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="locked"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.requiem.bdukssstudy.QuestionScreen"
            android:label="Question_Screen"
            android:parentActivityName="com.example.requiem.bdukssstudy.MainActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="locked"
            android:configChanges="orientation">
            <meta-data
                android:name="android.support.Parent_Activity"
                android:value="com.example.requiem.bdukssstudy.MainActivity"/>

        </activity>

    </application>

</manifest>
